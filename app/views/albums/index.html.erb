<p id="notice"><%= notice %></p>

<h1>Listing albums</h1>

<%= link_to 'New Album', new_album_path %>


    <div class="hashtag-footer">
      <a href="#" class="btn btn-info btn-mini">Make Album</a>
      <a href="#" class="btn btn-info btn-mini">View Photos</a>
    </div>  
    <br>

<% @albums_array.each do |album| %>
  <%= link_to album['name'], album_url(album['id']) %>
  <%= image_tag album['images'].sample%>
  <p></p>
  <br>
	<%= link_to "Delete Album", album_url(album['id']), :method => "delete" %>
  <br>
<% end %>

<!-- we need an image to display if there aren't any pictures in the album  -->